{
  "name": "@dogma-project/core-meta",
  "version": "0.7.20",
  "description": "Dogma is a cross-platform, non-anonymous, privacy-oriented decentralized communication platform written in JavaScript. Core package",
  "main": "./dist/manager.js",
  "types": "./types/manager.d.ts",
  "scripts": {
    "manager": "tsc && node dist/dev-manager.js",
    "dev": "apiport=24701 prefix=dev loglevel=3 tsc-watch --onSuccess 'node ./dist/dev.js'",
    "dev2": "apiport=24702 prefix=dev2 tsc-watch --onSuccess 'node ./dist/dev.js'",
    "empty": "apiport=24701 prefix=empty-1 tsc-watch --onSuccess 'node ./dist/dev.js'",
    "empty2": "apiport=24702 prefix=empty-2 tsc-watch --onSuccess 'node ./dist/dev.js'",
    "test": "tsc && NODE_ENV=test node --test dist/",
    "main-test": "tsc && NODE_ENV=development node dist/tests/main.js --loglevel=4",
    "build": "tsc --build"
  },
  "author": {
    "name": "Rotegott",
    "email": "rotegott@dogma-project.org",
    "url": "https://dogma-project.org/"
  },
  "homepage": "https://meta.dogma-project.org/",
  "keywords": [
    "dogma",
    "dogma-core",
    "dogma-meta",
    "decentralization",
    "p2p"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dogma-Project/dogma-meta-core-js"
  },
  "bugs": {
    "url": "https://github.com/Dogma-Project/dogma-meta-core-js/issues",
    "email": "rotegott@dogma-project.org"
  },
  "dependencies": {
    "@dogma-project/constants-meta": "^0.7.5",
    "@seald-io/nedb": "^4.0.2",
    "ext-ip": "^0.3.9",
    "ws": "^8.15.0"
  },
  "devDependencies": {
    "@types/node": "^18.17.1",
    "@types/ws": "^8.5.10",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  }
}
